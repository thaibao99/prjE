@using Microsoft.AspNetCore.Http
@using Microsoft.Extensions.DependencyInjection
@using prjetax.Models
@{
    var isAdmin = Context.Session.GetInt32("IsAdmin") == 1;
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var displayName = Context.Session.GetString("ManagerName") ?? "Người dùng";
    var unitCode = Context.Session.GetString("UnitCode");
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eTax Enterprise</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/_Layout.cshtml.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <div class="app d-flex">

        <!-- SIDEBAR -->
        <aside class="sidebar d-flex flex-column">

            <!-- 1) Brand (chỉ logo + tên ứng dụng) -->
            <div class="brand d-flex align-items-center px-3">
                <button class="btn btn-sm btn-outline-light me-2 d-lg-none"
                        data-bs-toggle="collapse" data-bs-target="#sideMenu">
                    <i class="bi bi-list"></i>
                </button>
                <img src="https://cdn.jsdelivr.net/gh/twbs/icons/icons/shield-lock.svg" alt="" width="22" class="me-2 opacity-75">
                <span class="brand-text">eTax - Enterprise</span>
            </div>

            <!-- 2) Header “Trang chủ” -->
            <div class="side-header d-flex align-items-center gap-2 px-3 py-3 border-bottom border-secondary-subtle">
                <img src="~/css/Thue.png" alt="Logo" width="28" height="28" class="rounded-circle bg-light p-1" />
                <div class="fw-semibold">Trang chủ</div>
            </div>

            <!-- 3) Thẻ người dùng -->
            <div class="user-card px-3 py-3">
                <div class="d-flex align-items-center">
                    <div class="uc-avatar me-3"><i class="bi bi-person"></i></div>
                    <div class="uc-info">
                        <div class="text-secondary small">Xin chào,</div>
                        <div class="fw-semibold">@displayName</div>
                        @if (!string.IsNullOrWhiteSpace(unitCode))
                        {
                            <div class="text-secondary small">(@unitCode)</div>
                        }
                    </div>
                </div>
            </div>

            <!-- 4) Menu (KHÔNG lặp user trong này) -->
            <div id="sideMenu" class="menu collapse d-lg-block">
                <nav class="nav flex-column p-2">
                    <a class="nav-link @(currentController == "Dashboard" ? "active" : "")"
                       asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-speedometer2 me-2"></i> Dashboard
                    </a>

                    <a class="nav-link @(currentController == "Enterprises" ? "active" : "")"
                       asp-controller="Enterprises" asp-action="Index">
                        <i class="bi bi-building me-2"></i> Doanh nghiệp
                    </a>

                    <a class="nav-link @(currentController == "EnterpriseHistories" ? "active" : "")"
                       asp-controller="EnterpriseHistories" asp-action="Index">
                        <i class="bi bi-clock-history me-2"></i> Lịch sử nhắc việc
                    </a>
                    <!-- Công việc của tôi -->
                    @{
                        // đếm nhanh số việc quá hạn để gắn badge
                        int overdueCount = 0;
                        try
                        {
                            var me = Context.Session.GetInt32("ManagerId") ?? 0;
                            using var scope = Context.RequestServices.CreateScope();
                            var db = scope.ServiceProvider.GetRequiredService<AppDbContext>();
                            var today = DateTime.Today;

                            overdueCount = db.WorkItems.Count(w =>
                            (w.Status == WorkStatus.Todo || w.Status == WorkStatus.Doing) &&
                            w.ManagerId == me &&
                            w.DueDate != null && w.DueDate.Value.Date < today);
                        }
                        catch { /* tránh crash layout nếu DB chưa sẵn sàng */ }
                    }

                    <a class="nav-link @(currentController == "WorkItems" ? "active" : "")"
                       asp-controller="WorkItems" asp-action="My">
                        <i class="bi bi-list-check me-2"></i> Công việc
                        @if (overdueCount > 0)
                        {
                            <span class="badge bg-danger ms-1">@overdueCount</span>
                        }
                    </a>
                    @if (isAdmin)
                    {
                        <a class="nav-link @(currentController == "Monitor" ? "active" : "")"
                           asp-controller="Monitor" asp-action="Index">
                            <i class="bi bi-graph-up-arrow me-2"></i> Giám sát tiến độ
                        </a>
                    }

                    @if (isAdmin)
                    {
                        <a class="nav-link @(currentController == "Managers" ? "active" : "")"
                           asp-controller="Managers" asp-action="Index">
                            <i class="bi bi-people me-2"></i> Nhân viên
                        </a>
                    }

                    <div class="mt-2">
                        <button class="nav-link d-flex align-items-center justify-content-between collapsed"
                                data-bs-toggle="collapse" data-bs-target="#grpOfficer">
                            <span><i class="bi bi-person-badge me-2"></i> Dành cho cán bộ</span>
                            <i class="bi bi-caret-down-fill small"></i>
                        </button>
                        <div id="grpOfficer" class="collapse ps-3">
                            <a class="nav-link" asp-controller="Account" asp-action="Logout">
                                <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                            </a>
                        </div>
                    </div>
                </nav>
            </div>
        </aside>

        <!-- MAIN CONTENT -->
        <main class="content flex-grow-1">
            <header class="topbar d-none d-lg-flex align-items-center justify-content-end px-3">
                <a class="btn btn-sm btn-outline-danger" asp-controller="Account" asp-action="Logout">
                    <i class="bi bi-box-arrow-right me-1"></i> Đăng xuất
                </a>
            </header>

            <div class="page container-fluid py-3">
                @RenderBody()
            </div>

            <footer class="app-footer text-center small text-secondary py-3">
                © @DateTime.Now.Year eTax Enterprise
            </footer>
        </main>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
