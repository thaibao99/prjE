@model prjetax.Models.ImportPreviewVM
@{
    ViewData["Title"] = "Xem trước nhập DN";
}

<div class="card shadow-sm mb-3">
    <div class="card-header fw-semibold gradient-header text-white">Kết quả đọc file</div>
    <div class="card-body">

        @if (Model.Errors.Any())
        {
            <div class="alert alert-danger">
                <b>Lỗi:</b>
                <ul>
                    @foreach (var e in Model.Errors)
                    {
                        <li>@e</li>
                    }
                </ul>
            </div>
        }

        <h6 class="mb-2">Doanh nghiệp mới (sẽ thêm): @Model.NewItems.Count</h6>
        <div class="table-responsive mb-3">
            <table class="table table-sm table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>TaxCode</th>
                        <th>TaxPayerName</th>
                        <th>Email</th>
                        <th>ManagerId</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var n in Model.NewItems)
                    {
                        <tr>
                            <td>@n.TaxCode</td>
                            <td>@n.TaxPayerName</td>
                            <td>@n.Email</td>
                            <td>@n.ManagerId</td>
                            <td>@n.Status</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <h6 class="mb-2">Doanh nghiệp đã có thông tin (trùng TaxCode): @Model.Conflicts.Count</h6>
        <form asp-action="Confirm" method="post">
            <input type="hidden" name="token" value="@Model.TempToken" />
            <div class="table-responsive">
                <table class="table table-sm table-bordered align-middle">
                    <thead class="table-light">
                        <tr>
                            <th style="width:120px">TaxCode</th>
                            <th colspan="2">TaxPayerName (Trước / Sau)</th>
                            <th colspan="2">Email (Trước / Sau)</th>
                            <th colspan="2">ManagerId (Trước / Sau)</th>
                            <th colspan="2">Status (Trước / Sau)</th>
                            <th style="width:100px">Ghi đè?</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Conflicts.Count; i++)
                        {
                            var c = Model.Conflicts[i];
                            <tr>
                                <td>@c.Incoming.TaxCode</td>
                                <td class="text-secondary">@c.Existing.TaxPayerName</td>
                                <td class="fw-600">@c.Incoming.TaxPayerName</td>
                                <td class="text-secondary">@c.Existing.Email</td>
                                <td class="fw-600">@c.Incoming.Email</td>
                                <td class="text-secondary">@c.Existing.ManagerId</td>
                                <td class="fw-600">@c.Incoming.ManagerId</td>
                                <td class="text-secondary">@c.Existing.Status</td>
                                <td class="fw-600">@c.Incoming.Status</td>
                                <td class="text-center">
                                    <input type="checkbox" name="overwriteFlags[@i]" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Upload" class="btn btn-secondary">Hủy</a>
                <button class="btn btn-primary">Tiếp tục &amp; Xuất báo cáo thay đổi</button>
            </div>
        </form>
    </div>
</div>
