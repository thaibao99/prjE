@model IEnumerable<prjetax.Models.WorkItem>
@using prjetax.Models

@{
    ViewData["Title"] = "Công việc của tôi";
    var isAdmin = Context.Session.GetInt32("IsAdmin") == 1;
    DateTime today = DateTime.Today;

    // map trạng thái -> tiếng Việt
    string VnStatus(WorkStatus s) => s switch
    {
        WorkStatus.Todo => "Chưa làm",
        WorkStatus.Doing => "Đang làm",
        WorkStatus.Done => "Hoàn thành",
        WorkStatus.Blocked => "Quá hạn",
        _ => s.ToString()
    };

    // lớp màu cho badge (rõ ràng hơn)
    string BadgeColor(WorkStatus s) => s switch
    {
        WorkStatus.Todo => "bg-secondary",
        WorkStatus.Doing => "bg-primary",
        WorkStatus.Done => "bg-success",
        WorkStatus.Blocked => "bg-danger",
        _ => "bg-light text-dark"
    };
}

<style>
    /* Badge trạng thái: to hơn, rõ hơn */
    .status-badge {
        font-size: .95rem; /* to hơn một chút */
        padding: .35rem .6rem; /* dày hơn */
        border-radius: 999px; /* pill */
        font-weight: 600; /* đậm hơn */
        letter-spacing: .2px;
    }
    /* Hàng cảnh báo */
    .row-overdue {
        background: #fff5f5;
    }
    /* quá hạn */
    .row-due-soon {
        background: #fffbe6;
    }
    /* T+2 */
</style>

<div class="card shadow-sm mb-4">
    <!-- header gradient -->
    <div class="card-header border-0 text-white fw-semibold d-flex align-items-center justify-content-between gradient-header">
        <div class="d-flex align-items-center gap-2">
            <i class="bi bi-list-check"></i>
            <span>@ViewData["Title"]</span>
        </div>

        <div class="d-flex gap-2">
            <form method="get" class="d-flex">
                <input name="q" value="@Context.Request.Query["q"]" class="form-control form-control-sm"
                       placeholder="Nhập mã số thuế">

                <select name="s" class="form-select form-select-sm ms-2" style="min-width:160px">
                    <option value="">-- Tất cả trạng thái --</option>
                    @foreach (WorkStatus st in Enum.GetValues(typeof(WorkStatus)))
                    {
                        var sel = Context.Request.Query["s"] == st.ToString();
                        <option value="@st" selected="@(sel)">@VnStatus(st)</option>
                    }
                </select>

                <button class="btn btn-sm btn-outline-light ms-2"><i class="bi bi-search"></i></button>
            </form>

            <a asp-action="Create" class="btn btn-sm btn-light text-primary fw-600">
                <i class="bi bi-plus-lg me-1"></i>Thêm công việc
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th style="width:26%">Tiêu đề</th>
                    <th style="width:12%">Trạng thái</th>
                    <th style="width:12%">Hạn</th>
                    <th style="width:22%">Doanh nghiệp</th>
                    <th style="width:12%">Mã số thuế</th>     <!-- cột mới -->
                    <th style="width:12%">Cán bộ phụ trách</th>
                    <th class="text-end" style="width:4%">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="7" class="text-center text-secondary py-4">Chưa có công việc nào.</td>
                    </tr>
                }
                else
                {
                    foreach (var w in Model)
                    {
                        var overdue = w.DueDate.HasValue && w.DueDate.Value.Date < today &&
                        (w.Status == WorkStatus.Todo || w.Status == WorkStatus.Doing);
                        var dueSoon = w.DueDate.HasValue && w.DueDate.Value.Date == today.AddDays(2) &&
                        (w.Status == WorkStatus.Todo || w.Status == WorkStatus.Doing);

                        <tr class="@(overdue ? "row-overdue" : dueSoon ? "row-due-soon" : "")">
                            <td class="fw-500">@w.Title</td>

                            <td>
                                <span class="status-badge text-white @BadgeColor(w.Status)">
                                    @VnStatus(w.Status)
                                </span>
                            </td>

                            <td>
                                @if (w.DueDate.HasValue)
                                {
                                    <span>@w.DueDate.Value.ToString("dd/MM/yyyy")</span>
                                    @if (overdue)
                                    {
                                        <span class="ms-2 badge rounded-pill text-bg-danger">Quá hạn</span>
                                    }
                                    else if (dueSoon)
                                    {
                                        <span class="ms-2 badge rounded-pill text-bg-warning text-dark">T+2</span>
                                    }
                                }
                            </td>

                            <td>@w.Enterprise?.TaxPayerName</td>
                            <td class="text-nowrap">@w.Enterprise?.TaxCode</td>  <!-- dữ liệu cột mới -->
                            <td>@w.Manager?.Name</td>

                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@w.Id"
                                   class="btn btn-sm btn-warning-subtle btn-icon" title="Sửa">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@w.Id" method="post" class="d-inline"
                                      onsubmit="return confirm('Xóa công việc này?');">
                                    <button class="btn btn-sm btn-danger-subtle btn-icon" title="Xóa">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                                <a asp-controller="WorkLogs" asp-action="Index" asp-route-workItemId="@w.Id"
                                   class="btn btn-sm btn-info-subtle btn-icon" title="Nhật ký">
                                    <i class="bi bi-journal-text"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
