@model prjetax.Models.EnterpriseDemo
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Chỉnh sửa doanh nghiệp";
    var managers = ViewBag.Managers as SelectList;
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post" class="row g-3">
    <input type="hidden" asp-for="Id" />
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
    <!-- Mã cơ quan thuế -->
    <div class="col-md-6">
        <label asp-for="TaxAgencyCode" class="form-label">
            Mã cơ quan thuế <span class="text-danger">*</span>
        </label>
        <input asp-for="TaxAgencyCode" class="form-control" />
        <span asp-validation-for="TaxAgencyCode" class="text-danger"></span>
    </div>

    <!-- Tên cơ quan thuế -->
    <div class="col-md-6">
        <label asp-for="TaxAgencyName" class="form-label">
            Tên cơ quan thuế <span class="text-danger">*</span>
        </label>
        <input asp-for="TaxAgencyName" class="form-control" />
        <span asp-validation-for="TaxAgencyName" class="text-danger"></span>
    </div>

    <!-- Người nộp thuế -->
    <div class="col-md-6">
        <label asp-for="TaxPayer" class="form-label">
            Người nộp thuế <span class="text-danger">*</span>
        </label>
        <input asp-for="TaxPayer" class="form-control" />
        <span asp-validation-for="TaxPayer" class="text-danger"></span>
    </div>

    <!-- Mã số thuế -->
    <div class="col-md-6">
        <label asp-for="TaxCode" class="form-label">
            Mã số thuế <span class="text-danger">*</span>
        </label>
        <input asp-for="TaxCode" class="form-control" />
        <span asp-validation-for="TaxCode" class="text-danger"></span>
    </div>

    <!-- Tên doanh nghiệp -->
    <div class="col-md-6">
        <label asp-for="TaxPayerName" class="form-label">
            Tên doanh nghiệp <span class="text-danger">*</span>
        </label>
        <input asp-for="TaxPayerName" class="form-control" />
        <span asp-validation-for="TaxPayerName" class="text-danger"></span>
    </div>

    <!-- Phòng quản lý -->
    <div class="col-md-6">
        <label asp-for="ManagementDept" class="form-label">
            Phòng quản lý <span class="text-danger">*</span>
        </label>
        <input asp-for="ManagementDept" class="form-control" />
        <span asp-validation-for="ManagementDept" class="text-danger"></span>
    </div>

    <!-- Tên cán bộ quản lý (ghi trên chứng từ) -->
    <div class="col-md-6">
        <label asp-for="ManagerName" class="form-label">
            Tên cán bộ quản lý (ghi trên chứng từ) <span class="text-danger">*</span>
        </label>
        <input asp-for="ManagerName" class="form-control" />
        <span asp-validation-for="ManagerName" class="text-danger"></span>
    </div>

    <!-- Mã ngành nghề chính -->
    <div class="col-md-6">
        <label asp-for="MainBusinessCode" class="form-label">
            Mã ngành nghề chính <span class="text-danger">*</span>
        </label>
        <input asp-for="MainBusinessCode" class="form-control" />
        <span asp-validation-for="MainBusinessCode" class="text-danger"></span>
    </div>

    <!-- Ngành nghề chính -->
    <div class="col-md-6">
        <label asp-for="MainBusinessName" class="form-label">
            Ngành nghề chính <span class="text-danger">*</span>
        </label>
        <input asp-for="MainBusinessName" class="form-control" />
        <span asp-validation-for="MainBusinessName" class="text-danger"></span>
    </div>

    <!-- Mô tả hoạt động kinh doanh -->
    <div class="col-12">
        <label asp-for="BusinessDescription" class="form-label">
            Mô tả hoạt động kinh doanh <span class="text-danger">*</span>
        </label>
        <textarea asp-for="BusinessDescription" class="form-control" rows="3"></textarea>
        <span asp-validation-for="BusinessDescription" class="text-danger"></span>
    </div>

    <!-- Tên Giám đốc & SĐT Giám đốc -->
    <div class="col-md-6">
        <label asp-for="DirectorName" class="form-label">
            Tên Giám đốc <span class="text-danger">*</span>
        </label>
        <input asp-for="DirectorName" class="form-control" />
        <span asp-validation-for="DirectorName" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="DirectorPhone" class="form-label">
            Số điện thoại Giám đốc <span class="text-danger">*</span>
        </label>
        <input asp-for="DirectorPhone" class="form-control" />
        <span asp-validation-for="DirectorPhone" class="text-danger"></span>
    </div>

    <!-- Tên Kế toán trưởng & SĐT Kế toán trưởng -->
    <div class="col-md-6">
        <label asp-for="ChiefAccountant" class="form-label">
            Tên Kế toán trưởng <span class="text-danger">*</span>
        </label>
        <input asp-for="ChiefAccountant" class="form-control" />
        <span asp-validation-for="ChiefAccountant" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="ChiefAccountantPhone" class="form-label">
            Số điện thoại Kế toán trưởng <span class="text-danger">*</span>
        </label>
        <input asp-for="ChiefAccountantPhone" class="form-control" />
        <span asp-validation-for="ChiefAccountantPhone" class="text-danger"></span>
    </div>

    <!-- Số chứng từ & Ngày chứng từ -->
    <div class="col-md-6">
        <label asp-for="DocumentNumber" class="form-label">
            Số chứng từ <span class="text-danger">*</span>
        </label>
        <input asp-for="DocumentNumber" class="form-control" />
        <span asp-validation-for="DocumentNumber" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="DocumentDate" class="form-label">
            Ngày chứng từ <span class="text-danger">*</span>
        </label>
        <input asp-for="DocumentDate" type="date" class="form-control" />
        <span asp-validation-for="DocumentDate" class="text-danger"></span>
    </div>

    <!-- Loại chứng từ -->
    <div class="col-md-6">
        <label asp-for="DocumentType" class="form-label">
            Loại chứng từ <span class="text-danger">*</span>
        </label>
        <input asp-for="DocumentType" class="form-control" />
        <span asp-validation-for="DocumentType" class="text-danger"></span>
    </div>

    <!-- Email -->
    <div class="col-md-6">
        <label asp-for="Email" class="form-label">
            Email <span class="text-danger">*</span>
        </label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <!-- Dropdown Cán bộ phụ trách -->
    <div class="col-md-6">
        <label asp-for="ManagerId" class="form-label">
            Cán bộ phụ trách <span class="text-danger">*</span>
        </label>
        <select asp-for="ManagerId" class="form-select" asp-items="managers" asp-option-label="-- Chọn cán bộ --"></select>
        <span asp-validation-for="ManagerId" class="text-danger"></span>
    </div>

    <!-- Trạng thái -->
    <div class="col-md-6">
        <label asp-for="Status" class="form-label">
            Trạng thái <span class="text-danger">*</span>
        </label>
        <select asp-for="Status"
                class="form-select"
                asp-items="ViewBag.Statuses">
            <option value="">-- Chọn trạng thái --</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <!-- Ghi chú không bắt buộc -->
    <div class="col-12">
        <label asp-for="Notes" class="form-label">Ghi chú</label>
        <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Cập nhật</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
