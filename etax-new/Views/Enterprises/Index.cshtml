@model IEnumerable<prjetax.Models.EnterpriseDemo>
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Danh sách doanh nghiệp";
    var isAdmin = (ViewBag.IsAdmin as bool?) == true;
    var search = ViewBag.Search as string;
    var managers = ViewBag.Managers as SelectList;
}

<div class="container py-4">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-3">
        <h2 class="mb-0">@ViewData["Title"]</h2>

        <div class="d-flex gap-2">
            <!-- Tải file mẫu -->
            <a class="btn btn-sm btn-outline-primary"
               asp-controller="EnterprisesImport" asp-action="Template">
                <i class="bi bi-file-earmark-arrow-down me-1"></i> Tải file mẫu
            </a>

            <!-- Nhập từ Excel (mở modal) -->
            <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#importExcelModal">
                <i class="bi bi-upload me-1"></i> Nhập từ Excel
            </button>
        </div>
    </div>

    <!-- Filter Card -->
    <div class="card-modern shadow-sm mb-4 p-3">
        <form asp-action="Index" method="get" class="row gx-3 gy-2 align-items-end">
            <div class="col-sm-4">
                <label class="form-label">Tìm kiếm</label>
                <input type="text"
                       name="search"
                       class="form-control"
                       placeholder="Nhập mã số thuế doanh nghiệp..."
                       value="@search" />
            </div>

            @if (isAdmin && managers != null)
            {
                <div class="col-sm-3">
                    <label class="form-label">Cán bộ</label>
                    <select name="managerId" class="form-select">
                        <option value="" selected="@(ViewBag.SelectedManagerId == null ? "selected" : null)">
                            -- Tất cả cán bộ --
                        </option>

                        @foreach (var item in managers)
                        {
                            var isSel = (ViewBag.SelectedManagerId?.ToString() == item.Value);
                            <option value="@item.Value" selected="@(isSel ? "selected" : null)">
                                @item.Text
                            </option>
                        }
                    </select>
                </div>
            }

            <div class="col-auto">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search me-1"></i> Lọc
                </button>
            </div>
            <div class="col-auto">
                <a asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle me-1"></i> Thêm mới
                </a>
            </div>
        </form>
    </div>

    <!-- Enterprises Table -->
    <div class="card-modern shadow-sm">
        <div class="table-responsive">
            <table class="table-modern table table-borderless mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Mã thuế</th>
                        <th>Tên doanh nghiệp</th>
                        <th>Ngành nghề chính</th>
                        <th>Cán bộ</th>
                        <th>Email</th>
                        <th class="text-end">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model)
                    {
                        <tr>
                            <td>@e.TaxCode</td>
                            <td>@e.TaxPayerName</td>
                            <td>@e.MainBusinessName</td>
                            <td>@e.Manager?.Name</td>
                            <td>@e.Email</td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@e.Id" class="btn btn-sm btn-outline-warning me-1">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@e.Id" class="btn btn-sm btn-outline-info me-1">
                                    <i class="bi bi-eye-fill"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@e.Id" class="btn btn-sm btn-outline-danger me-1">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                                <a asp-controller="Mail" asp-action="SendEmail" asp-route-id="@e.Id" class="btn btn-sm btn-outline-secondary me-1">
                                    <i class="bi bi-envelope-fill"></i>
                                </a>
                                <a asp-controller="EnterpriseHistories"
                                   asp-action="Index"
                                   asp-route-enterpriseId="@e.Id"
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-clock-history"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal nhập Excel -->
<div class="modal fade" id="importExcelModal" tabindex="-1" aria-labelledby="importExcelModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title" id="importExcelModalLabel">Nhập doanh nghiệp từ Excel</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body">
                <form asp-controller="EnterprisesImport" asp-action="Upload" method="post" enctype="multipart/form-data" id="frmImportExcel">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label class="form-label">Chọn file (.xlsx)</label>
                        <input type="file" name="file" class="form-control" accept=".xlsx" required />
                        <div class="form-text">
                            Cột yêu cầu: TaxAgencyCode, TaxAgencyName, TaxPayer, TaxCode, TaxPayerName, ManagementDept,
                            ManagerName, MainBusinessCode, MainBusinessName, BusinessDescription, DirectorName, DirectorPhone,
                            ChiefAccountant, ChiefAccountantPhone, DocumentNumber, DocumentDate (yyyy-MM-dd), DocumentType,
                            Email, ManagerId, Status, Notes
                        </div>
                    </div>
                </form>
                <div class="alert alert-info small mb-0">
                    <strong>Quy tắc trùng:</strong> theo <em>TaxCode</em>. Nếu trùng, hệ thống sẽ hiện danh sách “Doanh nghiệp đã có thông tin”
                    để bạn chọn <em>Ghi đè</em> hoặc <em>Hủy</em>, đồng thời xuất báo cáo Excel 2 dòng liền nhau (Trước/Sau) và highlight khác biệt.
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Đóng</button>
                <button class="btn btn-primary btn-sm" onclick="document.getElementById('frmImportExcel').submit();">
                    Tiếp tục &amp; xem trước
                </button>
            </div>
        </div>
    </div>
</div>
