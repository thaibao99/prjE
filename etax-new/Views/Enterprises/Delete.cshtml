@model prjetax.Models.EnterpriseDemo
@{
    ViewData["Title"] = "Xóa doanh nghiệp";
}

<div class="container py-4">
    <div class="card-modern shadow-sm">
        <!-- Header đỏ cảnh báo -->
        <div class="card-header bg-gradient-warning text-dark d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill fs-2 me-2"></i>
            <h4 class="mb-0">@ViewData["Title"]</h4>
        </div>

        <div class="card-body">
            <p class="lead">
                Bạn có chắc chắn muốn <strong class="text-danger">xóa</strong> doanh nghiệp
                <span class="fw-semibold">@Model.TaxPayerName</span> không?
            </p>

            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="bi bi-trash-fill me-1"></i> Xóa
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-1"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
