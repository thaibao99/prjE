@model prjetax.Models.Manager

@{
    ViewData["Title"] = "Chi tiết nhân viên";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <!-- Header -->
        <div class="card-header bg-gradient-info text-white d-flex align-items-center">
            <i class="bi bi-person-lines-fill fs-2 me-2"></i>
            <h5 class="mb-0">@ViewData["Title"]</h5>
        </div>

        <!-- Body -->
        <div class="card-body">
            <dl class="row mb-4">
                <dt class="col-sm-3">Username</dt>
                <dd class="col-sm-9">@Model.Username</dd>

                <dt class="col-sm-3">Họ &amp; tên</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Quyền Admin</dt>
                <dd class="col-sm-9">
                    @if (Model.IsAdmin)
                    {
                        <span class="badge bg-success">
                            <i class="bi bi-check-lg me-1"></i>Admin
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">
                            <i class="bi bi-x-lg me-1"></i>User
                        </span>
                    }
                </dd>
            </dl>

            <div class="d-flex">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                    <i class="bi bi-pencil-fill me-1"></i> Sửa
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle-fill me-1"></i> Quay về
                </a>
            </div>
        </div>
    </div>
</div>
