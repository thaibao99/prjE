@model IEnumerable<prjetax.Models.Manager>

@{
    ViewData["Title"] = "Nhân viên";
}

<div class="container py-4">
    <div class="card shadow-sm mb-4">
        <div class="card-header d-flex justify-content-between align-items-center bg-gradient-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-people-fill me-2"></i>
                Danh sách nhân viên
            </h5>
            <a asp-action="Create" class="btn btn-light btn-sm">
                <i class="bi bi-person-plus-fill me-1"></i> Thêm mới
            </a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="w-5">#</th>
                            <th>Username</th>
                            <th>Tên nhân viên</th>
                            <th class="text-center">Admin?</th>
                            <th class="text-end">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var m in Model)
                        {
                            <tr>
                                <td>@m.Id</td>
                                <td>@m.Username</td>
                                <td>@m.Name</td>
                                <td class="text-center">
                                    @if (m.IsAdmin)
                                    {
                                        <i class="bi bi-check-circle-fill text-success"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-x-circle-fill text-danger"></i>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@m.Id" class="btn btn-sm btn-outline-info me-1" title="Chi tiết">
                                        <i class="bi bi-eye-fill"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@m.Id" class="btn btn-sm btn-outline-warning me-1" title="Sửa">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@m.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit"
                                                class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('Xác nhận xóa nhân viên này?');"
                                                title="Xóa">
                                            <i class="bi bi-trash-fill"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
