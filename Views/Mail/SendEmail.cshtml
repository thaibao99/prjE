@model prjetax.Models.SendEmailViewModel
@{
    ViewData["Title"] = "Gửi Email";
    var entId = ViewBag.EnterpriseId;
}

<div class="container py-4">
    <div class="card-modern shadow-sm mx-auto" style="max-width: 600px;">
        <!-- Header -->
        <div class="card-header bg-gradient-primary text-white d-flex align-items-center">
            <i class="bi bi-envelope-fill fs-2 me-2"></i>
            <h4 class="mb-0">@ViewData["Title"]</h4>
        </div>
        <!-- Body -->
        <div class="card-body">
            <form asp-action="SendEmail"
                  asp-controller="Mail"
                  asp-route-id="@entId"
                  method="post"
                  enctype="multipart/form-data"
                  novalidate>
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <!-- To Email (readonly) -->
                <div class="form-floating mb-3">
                    <input asp-for="ToEmail"
                           class="form-control"
                           placeholder="Đến"
                           readonly />
                    <label asp-for="ToEmail">Đến *</label>
                    <span asp-validation-for="ToEmail" class="text-danger small"></span>
                </div>

                <!-- Subject -->
                <div class="form-floating mb-3">
                    <input asp-for="Subject"
                           class="form-control"
                           placeholder="Tiêu đề" />
                    <label asp-for="Subject">Tiêu đề *</label>
                    <span asp-validation-for="Subject" class="text-danger small"></span>
                </div>

                <!-- Body -->
                <div class="form-floating mb-3">
                    <textarea asp-for="Body"
                              class="form-control"
                              placeholder="Nội dung"
                              style="height: 150px"></textarea>
                    <label asp-for="Body">Nội dung *</label>
                    <span asp-validation-for="Body" class="text-danger small"></span>
                </div>

                <!-- Deadline -->
                <div class="form-floating mb-3">
                    <input asp-for="Deadline"
                           type="date"
                           class="form-control"
                           placeholder="Hạn chót" />
                    <label asp-for="Deadline">Hạn chót</label>
                    <span asp-validation-for="Deadline" class="text-danger small"></span>
                </div>

                <!-- Notes -->
                <div class="form-floating mb-3">
                    <textarea asp-for="Notes"
                              class="form-control"
                              placeholder="Ghi chú"
                              style="height: 100px"></textarea>
                    <label asp-for="Notes">Ghi chú</label>
                    <span asp-validation-for="Notes" class="text-danger small"></span>
                </div>

                <!-- Rating -->
                <div class="form-floating mb-3">
                    <input asp-for="Rating"
                           class="form-control"
                           placeholder="Đánh giá" />
                    <label asp-for="Rating">Đánh giá</label>
                    <span asp-validation-for="Rating" class="text-danger small"></span>
                </div>

                <!-- Attachment -->
                <div class="mb-4">
                    <label asp-for="Attachment" class="form-label">
                        @Html.DisplayNameFor(m => m.Attachment)
                    </label>
                    <input asp-for="Attachment"
                           type="file"
                           class="form-control" />
                    <span asp-validation-for="Attachment" class="text-danger small"></span>
                    <div class="form-text">Không bắt buộc, chỉ PDF, tối đa 5MB.</div>
                </div>

                <!-- Actions -->
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success me-2">
                        <i class="bi bi-send-fill me-1"></i> Gửi
                    </button>
                    <a asp-action="Index"
                       asp-controller="Enterprises"
                       class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle me-1"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
